<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TagCornerImageView">
        <attr name="tag_text" format="string"/>
        <attr name="tag_text_color" format="color"/>
        <attr name="tag_text_size" format="dimension"/>
        <attr name="tag_background_color" format="color|reference"/>
        <attr name="tag_background_alpha" format="integer"/>
        <attr name="tag_icon" format="reference"/>
        <attr name="tag_icon_turn" format="boolean"/>
        <attr name="tag_icon_padding" format="dimension"/>
        <attr name="tag_gravity">
            <enum name="left_top_corner" value="0"/>
            <enum name="right_top_corner" value="1"/>
            <enum name="right_bottom_corner" value="2"/>
            <enum name="left_bottom_corner" value="3"/>
        </attr>
        <attr name="tag_type">
            <enum name="triangle" value="0"/>
            <enum name="rect" value="1"/>
            <enum name="round_rect" value="2"/>
        </attr>

    </declare-styleable>
</resources>