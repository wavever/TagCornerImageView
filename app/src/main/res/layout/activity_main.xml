<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">

        <me.wavever.library.TagCornerImageView
            android:id="@+id/rect_img1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@mipmap/wukong"
            android:layout_margin="10dp"
            app:tag_background_color="#f56112"
            app:tag_gravity="left_top_corner"
            app:tag_text="小悟空"
            app:tag_text_size="14sp"
            app:tag_type="rect" />

        <me.wavever.library.TagCornerImageView
            android:id="@+id/rect_img2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@mipmap/wukong2"
            android:layout_margin="10dp"
            app:tag_gravity="right_top_corner"
            app:tag_background_color="#ea1f1c"
            app:tag_text="小悟空"
            app:tag_text_size="14sp"
            app:tag_type="rect" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">

        <me.wavever.library.TagCornerImageView
            android:id="@+id/rect_img3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@mipmap/qiqi"
            android:layout_margin="10dp"
            app:tag_gravity="left_bottom_corner"
            app:tag_background_color="#3224f5"
            app:tag_text="琪 琪"
            app:tag_text_size="14sp"
            app:tag_type="rect"/>

        <me.wavever.library.TagCornerImageView
            android:id="@+id/rect_img4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@mipmap/buma"
            android:layout_margin="10dp"
            app:tag_gravity="right_bottom_corner"
            app:tag_background_color="#ae03f2"
            app:tag_text="布 玛"
            app:tag_text_size="12sp"
            app:tag_type="rect" />
    </LinearLayout>

</LinearLayout>
